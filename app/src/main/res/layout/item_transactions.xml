<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/margin_standard_16dp"
    app:cardBackgroundColor="@color/color_5"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_standard_32dp"
        android:paddingEnd="@dimen/margin_standard_32dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIvContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="250dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_type_home" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_standard_8dp"
            android:layout_toEndOf="@+id/cvIvContainer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_standard_8dp"
                android:text="1/1/2021"
                android:textSize="@dimen/textsize_standard_12sp" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_standard_8dp"
                android:layout_toEndOf="@+id/cvIvContainer"
                android:text="Transaction Description"
                android:textSize="@dimen/textsize_standard_12sp" />

            <TextView
                android:id="@+id/tvTransactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cvIvContainer"
                android:text="type: Income"
                android:textColor="@color/color_income_green"
                android:textSize="@dimen/textsize_standard_12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="+$50.00"
            android:textColor="@color/color_income_green"
            android:textSize="@dimen/textsize_standard_16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

